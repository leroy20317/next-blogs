{
  "name": "next-blogs",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS='--inspect' next  -p 5500 -H local.leroy.net.cn",
    "build": "next build",
    "start-local": "next start -p 5500 -H local.leroy.net.cn",
    "start": "next start -p 5500",
    "publish": "next build && node kodo.js",
    "pm2": "pm2 start npm --no-pmx --name next-blogs -- start",
    "type-check": "tsc",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:prettier": "prettier --check \"src/**/*\" --end-of-line auto",
    "lint:style": "stylelint --fix \"src/**/*.scss\" --syntax=scss",
    "precommit": "lint-staged",
    "prettier": "prettier -c --write \"src/**/*\""
  },
  "husky": {
    "hooks": {
      "commit-msg": "fabric verify-commit",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.scss": "stylelint --syntax=scss",
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,scss,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "antd": "^4.17.2",
    "classnames": "^2.3.1",
    "lodash": "^4.17.21",
    "mobx": "^6.3.6",
    "mobx-react": "^7.2.1",
    "mobx-react-lite": "^3.2.2",
    "moment": "^2.29.1",
    "next": "^12.0.4",
    "node-abort-controller": "^3.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "sass": "^1.43.5",
    "umi-request": "^1.4.0",
    "yet-another-abortcontroller-polyfill": "^0.0.4"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.0.4",
    "@types/lodash": "^4.14.177",
    "@types/node": "^16.11.10",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@umijs/fabric": "^2.8.1",
    "co": "^4.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.0.4",
    "husky": "^4.3.8",
    "lint-staged": "^12.1.2",
    "path": "^0.12.7",
    "prettier": "^2.5.0",
    "qiniu": "^7.4.0",
    "rd": "^2.0.1",
    "stylelint": "^13.13.1",
    "stylelint-scss": "^4.0.0",
    "typescript": "^4.5.2"
  }
}
